<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fakeapi.MainActivity">


    <Button
        android:id="@+id/btn_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="134dp"
        android:text="Users" />

    <Button
        android:id="@+id/btn_todos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_users"
        android:layout_marginStart="69dp"
        android:layout_toEndOf="@+id/btn_users"
        android:text="Todos" />

    <Button
        android:id="@+id/btn_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_users"
        android:layout_marginTop="102dp"
        android:layout_toStartOf="@+id/btn_todos"
        android:text="Photos" />

    <Button
        android:id="@+id/btn_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_todos"
        android:layout_alignTop="@+id/btn_photos"
        android:text="Posts" />
</RelativeLayout>
